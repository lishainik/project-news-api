{
  "extends": "airbnb-base",

  "rules": {
    "no-underscore-dangle": ["error", { "allow": ["_id"] }],
    "eqeqeq" : ["error", "smart"],
    //eslint не совсем понимает express миддлвер для обработки ошибок и выставляет next как неиспользованный var
    "no-unused-vars": ["error", { "argsIgnorePattern": "next" }]
  }
}

